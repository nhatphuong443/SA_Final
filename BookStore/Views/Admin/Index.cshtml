@model IEnumerable<Authentication.Models.UserRoles>

<h1 class="text-center mb-4">Users Management</h1>

<div class="text-end mb-3">
    <a href="/Admin/CreateUser" class="btn btn-primary"><i class="bi bi-plus"></i> Create New User</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="User Actions">
                            <a href="/Admin/EditUser/@user.UserId" class="btn btn-outline-primary"><i class="bi bi-pencil"></i> Edit</a>
                            <form asp-action="DeleteUser" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@user.UserId" />
                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this user?')"><i class="bi bi-trash"></i> Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
